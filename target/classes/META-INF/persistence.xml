<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
             http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
	version="2.1">
	<persistence-unit name="yugiohPU"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>br.edu.unifei.ecoe08.yugioh.model.ArenaDeDuelo</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Armadilha</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Baralho</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.CampoDeDuelo</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Carta</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.DiscoDeDuelo</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Duelista</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Duelo</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Dupla</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Efeito</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Estrutura</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Evento</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Exodia</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Farao</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.ItemDoMilenio</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Magica</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Monstro</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.MonstroDeEfeito</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.MonstroDeFusao</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.MonstroDeRitual</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Pessoa</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.ReliquiaDoMilenio</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Simples</class>
		<class>br.edu.unifei.ecoe08.yugioh.model.Torneio</class>
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/yugioh?zeroDateTimeBehavior=convertToNull" />
			<property name="javax.persistence.jdbc.user" value="yugioh" />
			<property name="javax.persistence.jdbc.driver"
				value="org.mariadb.jdbc.Driver" />
			<property name="javax.persistence.jdbc.password"
				value="yugioh" />
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.MariaDBDialect" />
			<property
				name="javax.persistence.schema-generation.database.action"
				value="create" />
		</properties>
	</persistence-unit>
</persistence>
